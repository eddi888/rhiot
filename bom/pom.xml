    <parent>
        <groupId>io.rhiot</groupId>
        <artifactId>rhiot</artifactId>
        <version>0.1.1-SNAPSHOT</version>
    </parent>
    <artifactId>rhiot-bom</artifactId>
    <packaging>pom</packaging>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <properties>
        <activemq.version>5.11.1</activemq.version>
        <apache-commons-lang3.version>3.4</apache-commons-lang3.version>
        <apache-poi.version>3.13-beta1</apache-poi.version>
        <californium-core.version>1.0.0-M3</californium-core.version>
        <camel.version>2.15.2</camel.version>
        <camel-labs.version>0.1.1-SNAPSHOT</camel-labs.version>
        <embedmongo.version>1.48.2</embedmongo.version>
        <google-maps-services.version>0.1.7</google-maps-services.version>
        <google-truth.version>0.27</google-truth.version>
        <infinispan.version>8.0.0.Beta2</infinispan.version>
        <ivy.version>2.4.0</ivy.version>
        <jcabi-aether.version>0.10.1</jcabi-aether.version>
        <jfreechart.version>1.0.19</jfreechart.version>
        <jolokia.version>1.3.1</jolokia.version>
        <jsch.version>0.1.53</jsch.version>
        <kura.version>1.0.3</kura.version>
        <leshan.version>0.1.11-M5</leshan.version>
        <logback.version>1.1.2</logback.version>
        <maven.version>3.0.5</maven.version>
        <mockito-groovy-support.version>1.3</mockito-groovy-support.version>
        <pi4j-version>1.0</pi4j-version>
        <pubnub.version>3.7.4</pubnub.version>
        <reflections.version>0.9.10</reflections.version>
        <servlet-api.version>3.1.0</servlet-api.version>
        <slfj4.version>1.7.12</slfj4.version>
        <tinkerforge.version>2.1.5</tinkerforge.version>
        <vertx.version>3.0.0</vertx.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- BOMs -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring-boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.camel</groupId>
                <artifactId>camel-parent</artifactId>
                <version>${camel.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- Dependencies -->
            <dependency>
                <groupId>com.cyrusinnovation</groupId>
                <artifactId>mockito-groovy-support</artifactId>
                <version>${mockito-groovy-support.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.camel-labs</groupId>
                <artifactId>camel-labs-iot-cloudlet-document-default</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.camel-labs</groupId>
                <artifactId>camel-labs-iot-cloudlet-document-sdk</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-cloudlet-device</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-cloudlet-geofencing</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.camel-labs</groupId>
                <artifactId>camel-labs-iot-deployer</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-gateway</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-steroids</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-utils</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-utils-ssh</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>io.rhiot</groupId>
                <artifactId>rhiot-vertx</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.camel-labs</groupId>
                <artifactId>camel-pi4j</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.camel-labs</groupId>
                <artifactId>camel-gps-bu353</artifactId>
                <version>${camel-labs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.maps</groupId>
                <artifactId>google-maps-services</artifactId>
                <version>${google-maps-services.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.truth</groupId>
                <artifactId>truth</artifactId>
                <version>${google-truth.version}</version>
            </dependency>
            <dependency>
                <groupId>com.jcabi</groupId>
                <artifactId>jcabi-aether</artifactId>
                <version>${jcabi-aether.version}</version>
                <exclusions>
                    <exclusion>
                        <!-- Fat jar optimization. We don't need 9 MB of AWS-related code. -->
                        <artifactId>aws-java-sdk</artifactId>
                        <groupId>com.amazonaws</groupId>
                    </exclusion>
                    <exclusion>
                        <!-- Optional dependency. Excluding as it writes to STDERR and pollutes the application output. -->
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-validator</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.jcraft</groupId>
                <artifactId>jsch</artifactId>
                <version>${jsch.version}</version>
            </dependency>
            <dependency>
                <groupId>com.pi4j</groupId>
                <artifactId>pi4j-core</artifactId>
                <version>${pi4j-version}</version>
            </dependency>
            <dependency>
                <groupId>com.pi4j</groupId>
                <artifactId>pi4j-device</artifactId>
                <version>${pi4j-version}</version>
            </dependency>
